<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.volunteer.mapper.ActivityProcessMapper">

    <resultMap type="ActivityProcess" id="ActivityProcessResult">
        <result property="processId" column="process_id"/>
        <result property="reviewer" column="reviewer"/>
        <result property="reviewTime" column="review_time"/>
        <result property="reviewComments" column="review_comments"/>
        <result property="reviewStatus" column="review_status"/>
        <result property="activityId" column="activity_id"/>
    </resultMap>

    <sql id="selectActivityProcessVo">
        select process_id, reviewer, review_time, review_comments, review_status, activity_id
        from activity_post_review
    </sql>

    <select id="selectActivityProcessList" parameterType="ActivityProcess" resultMap="ActivityProcessResult">
        <include refid="selectActivityProcessVo"/>
        <where>
        </where>
    </select>

    <select id="selectActivityProcessByProcessId" parameterType="Long" resultMap="ActivityProcessResult">
        <include refid="selectActivityProcessVo"/>
        where process_id = #{processId}
    </select>

    <insert id="insertActivityProcess" parameterType="ActivityProcess">
        insert into activity_post_review
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="processId != null">process_id,</if>
            <if test="reviewer != null">reviewer,</if>
            <if test="reviewTime != null">review_time,</if>
            <if test="reviewComments != null">review_comments,</if>
            <if test="reviewStatus != null">review_status,</if>
            <if test="activityId != null">activity_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="processId != null">#{processId},</if>
            <if test="reviewer != null">#{reviewer},</if>
            <if test="reviewTime != null">#{reviewTime},</if>
            <if test="reviewComments != null">#{reviewComments},</if>
            <if test="reviewStatus != null">#{reviewStatus},</if>
            <if test="activityId != null">#{activityId},</if>
        </trim>
    </insert>

    <update id="updateActivityProcess" parameterType="ActivityProcess">
        update activity_post_review
        <trim prefix="SET" suffixOverrides=",">
            <if test="reviewer != null">reviewer = #{reviewer},</if>
            <if test="reviewTime != null">review_time = #{reviewTime},</if>
            <if test="reviewComments != null">review_comments = #{reviewComments},</if>
            <if test="reviewStatus != null">review_status = #{reviewStatus},</if>
            <if test="activityId != null">activity_id = #{activityId},</if>
        </trim>
        where process_id = #{processId}
    </update>

    <delete id="deleteActivityProcessByProcessId" parameterType="Long">
        delete
        from activity_post_review
        where process_id = #{processId}
    </delete>

    <delete id="deleteActivityProcessByProcessIds" parameterType="String">
        delete from activity_post_review where process_id in
        <foreach item="processId" collection="array" open="(" separator="," close=")">
            #{processId}
        </foreach>
    </delete>
</mapper>